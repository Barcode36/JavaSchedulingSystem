<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaschedulingsystem.AppointmentsViewController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Appointments">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="addApptButton" layoutX="15.0" layoutY="47.0" mnemonicParsing="false" onAction="#addApptButtonHandler" text="New Appt" />
                        <TableView fx:id="apptsTable" layoutX="107.0" layoutY="47.0" prefHeight="276.0" prefWidth="615.0">
                          <columns>
                            <TableColumn prefWidth="95.0" text="Date" />
                            <TableColumn prefWidth="89.0" text="Time" />
                              <TableColumn prefWidth="154.0" text="Appt. Type" />
                              <TableColumn prefWidth="276.0" text="Customer" />
                          </columns>
                        </TableView>
                        <RadioButton fx:id="viewWeekRadio" layoutX="166.0" layoutY="22.0" mnemonicParsing="false" text="Week" />
                        <RadioButton fx:id="viewMonthRadio" layoutX="239.0" layoutY="22.0" mnemonicParsing="false" text="Month" />
                        <Label layoutX="107.0" layoutY="23.0" text="View By" />
                     </children>
                  </AnchorPane>
               </content>
          </Tab>
          <Tab text="Customers">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="newCustomerButton" layoutX="14.0" layoutY="47.0" mnemonicParsing="false" text="New Cust" />
                        <TableView fx:id="customerTable" layoutX="107.0" layoutY="47.0" prefHeight="277.0" prefWidth="614.0">
                          <columns>
                            <TableColumn prefWidth="107.0" text="First Name" />
                            <TableColumn prefWidth="112.0" text="Last Name" />
                              <TableColumn prefWidth="219.0" text="Address" />
                              <TableColumn prefWidth="148.0" text="Phone" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
               </content></Tab>
            <Tab text="Reports">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
